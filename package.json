{
	"name": "sveltekit-adapter-template",
	"description": "SvelteKit adapter for template engines such as PHP, Blade, Handlebars, etc.",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/sveltekit-adapter-template"
	},
	"license": "MIT",
	"keywords": [
		"sveltekit-adapter",
		"svelte",
		"sveltekit",
		"php",
		"blade",
		"handlebars",
		"ejs"
	],
	"type": "module",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"main": "index.js",
	"exports": {
		".": {
			"import": "./index.js"
		}
	},
	"types": "index.d.ts",
	"scripts": {
		"lint": "eslint --ignore-path .gitignore \"**/*.{ts,js,svelte}\" && npm run check-format",
		"format": "npm run check-format -- --write",
		"check-format": "prettier --check . --ignore-path .gitignore",
		"test": "npm run lint"
	},
	"dependencies": {
		"html-minifier-terser": "^7.0.0-alpha.1",
		"jsdom": "^19.0.0",
		"prettier": "^2.5.1",
		"tiny-glob": "^0.2.9"
	},
	"devDependencies": {
		"@sveltejs/eslint-config": "github:sveltejs/eslint-config#v5.8.0",
		"@sveltejs/kit": "^1.0.0-next.229",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-svelte3": "^3.4.0",
		"sirv": "^2.0.0",
		"svelte": "^3.44.2",
		"typescript": "^4.5.4"
	}
}
