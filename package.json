{
  "name": "sveltekit-adapter-html-like",
  "description": "SvelteKit adapter for HTML-like template engines such as PHP, Blade, Handlebars, etc.",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/sveltekit-adapter-html-like"
  },
  "license": "MIT",
  "keywords": [
    "sveltekit-adapter",
    "svelte",
    "sveltekit",
    "php",
    "blade",
    "handlebars",
    "ejs"
  ],
  "type": "module",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js"
    }
  },
  "types": "index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "check-format": "prettier --check . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:js": "eslint --ignore-path .gitignore \"**/*.{ts,js,svelte}\"",
    "lint": "npm-run-all --parallel lint:*",
    "test": "npm run lint"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "cosmiconfig": "^7.0.1",
    "html-minifier-terser": "^7.0.0-alpha.1",
    "jsdom": "^19.0.0",
    "json": "^11.0.0",
    "prettier": "^2.5.1",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@sveltejs/eslint-config": "github:sveltejs/eslint-config#v5.8.0",
    "@sveltejs/kit": "^1.0.0-next.229",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "sirv": "^2.0.0",
    "svelte": "^3.44.2",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.(|js|ts|json)": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  }
}
